<p id="notice"><%= notice %></p>

<h1>Stocks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Ammount</th>
      <th>Close price</th>
      <th>Open price</th>
      <th>High</th>
      <th>Low</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stocks.each do |stock| %>
      <tr>
        <td><%= stock.name %></td>
        <td><%= stock.ammount %></td>
        <td><%= stock.close_price %></td>
        <td><%= stock.open_price %></td>
        <td><%= stock.high %></td>
        <td><%= stock.low %></td>
        <td><%= link_to 'Show', stock %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

