 <head>
   <script src="https://js.stripe.com/v3/"></script>
 </head>

<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @event.Title %>
</p>

<p>
  <strong>Date:</strong>
  <%= @event.Date %>
</p>

<p>
  <strong>Time:</strong>
  <%= @event.Time %>
</p>

<p>
  <strong>Tickets:</strong>
  <%= @event.Tickets %>
</p>

<p>
  <strong>Price:</strong>
  <%= @event.Price %>
</p>
<%= number_field_tag 'amount', nil, :min => 1, :max => @event.Tickets - 1 %>


<%= button_to 'Buy', charge_create_path, method: :post, params: { id: @event.id, quantity: params[:amount]  }, remote:true %>

<%= link_to 'Edit', edit_event_path(@event) %> |
<%= link_to 'Back', events_path %>
